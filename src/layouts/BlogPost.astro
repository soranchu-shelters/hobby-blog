---
import BlogArticle from "../components/BlogArticle.astro";
import BaseHead from "../components/BaseHead.astro";
import BlogHeader from "../components/legacy/BlogHeader.astro";
import { default as BlogPostTemplate } from "../components/BlogPost.astro";
import Header from "../components/legacy/Header.astro";
import { Footer } from "../components/v0/footer.tsx";

import "../assets/_article-min.scss";
// import '../assets/lib/customize/_article.scss'
import "../assets/lib/customize/_twitter.scss";
import "../assets/lib/_layout.scss";
import "../assets/player.scss";
import "../assets/base.scss";
import "../assets/tailwind.scss";
import "../assets/section.scss";
import "../assets/summary.scss";

const { content } = Astro.props;
const { lang, title, description, heroImage, permalink, alt, tags } = content;
---

<html lang={lang || 'ja'}>
  <head>
    <BaseHead {title} {description} {permalink} />

    <style is:global>
      body {
        padding: 0;
        margin: 0;
        /* rgba(167, 123, 243, 0.1) */
        background: #000;
        color: #fff;
        user-select: none;
        -moz-user-select: none;
        -webkit-user-select: none;
        -ms-user-select: none;
      }

      a {
        color: #42b883;
      }

      .article .post-detail h2,
      .article .post-detail h3,
      .article .post-detail h4,
      .article .post-detail p,
      .article .post-detail li,
      .article .post-detail td,
      .article .post-detail tr {
        color: #fff;
      }
    </style>
  </head>

  <body>
    <Header>
      <BlogHeader {title} {description} />
    </Header>
    <BlogArticle>
      <BlogPostTemplate {heroImage} {alt} {tags}>
        <div class="article">
          <div class="post-detail">
            <slot />
          </div>
        </div>
      </BlogPostTemplate>
    </BlogArticle>
    <Footer />
  </body>
</html>
