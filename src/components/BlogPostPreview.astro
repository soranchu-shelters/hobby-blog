---
import { Image } from "astro:assets";

const { imagePath = "", title = "", tags = [] } = Astro.props;
---

<div class="item">
  {imagePath && (
    <Image width="360" height="210" loading="lazy" src={imagePath} alt="" />
  )}
  {title && (
    <div class="title">{title}</div>
  )}
  {tags.length > 0 && (
    <p class="tags-wrapper">
      {tags.map((tag) => (
        <span class="tag">{tag}</span>
      ))}
    </p>
  )}
</div>

<style>
  .item {
    padding: 0;
    text-align: center;
    overflow: hidden;
    position: relative;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  p {
    text-align: left;
  }

  .title {
    width: 100%;
    padding: 8px 0;
    position: absolute;
    bottom: 20%;
    background: rgba(0, 0, 0, 0.6);
    color: #fff;
    text-align: left;
  }

  .tags-wrapper {
    width: 100%;
    height: 24%;
    position: absolute;
    bottom: 0;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    background: rgba(0, 0, 0, 0.6);
    word-break: break-all;
    line-height: 1;
  }

  .tag {
    background-color: #1e73be;
    color: #fff;
    padding: 4px 8px;
    margin: 0 4px;
    line-height: 1;
  }
</style>
