---
export interface Props {
	heroImage: string;
	alt: string;
}

const { heroImage, alt } = Astro.props;
---

<div class="content">
  {heroImage && (
    <img
      width="720"
      height="420"
      class="hero-image"
      decoding="async"
      loading="lazy"
      src={heroImage}
      alt={alt}
    />
  )}
  <slot />
</div>

<style>
  .hero-image {
    width: 100vw;
    object-fit: cover;
    object-position: center;
    margin-top: 2rem;
    margin-bottom: 4rem;
    max-width: 1280px;
  }

  @media (max-width: 50em) {
    .hero-image {
      height: 260px;
      margin-top: 0;
      margin-bottom: 2rem;
    }
  }

  .content {
    display: flex;
    flex-direction: column;
    text-align: center;
    align-items: center;
    justify-content: center;
    margin-top: 4rem;
    margin-bottom: 8rem;
  }
</style>
