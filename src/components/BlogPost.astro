---
export interface Props {
	heroImage: string;
	alt: string;
	tags: string[];
}

const { heroImage, alt, tags } = Astro.props;
---

<div class="content">
  {heroImage && (
    <img
      width="360"
      height="210"
      class="hero-image"
      decoding="async"
      loading="lazy"
      src={heroImage}
      alt={alt}
    />
  )}
  {tags.length > 0 && (
    <p class="tags-wrapper">
      {tags.map((tag) => (
        <span class="tag">{tag}</span>
      ))}
    </p>
  )}
  <slot />
</div>

<style>
  .hero-image {
    width: 100vw;
    object-fit: cover;
    object-position: center;
    margin-top: 2rem;
    margin-bottom: 4rem;
    max-width: 1280px;
  }

  @media (max-width: 50em) {
    .hero-image {
      height: 260px;
      margin-top: 0;
      margin-bottom: 2rem;
    }
  }

  .content {
    display: flex;
    flex-direction: column;
    text-align: center;
    align-items: center;
    justify-content: center;
    margin-top: 4rem;
    margin-bottom: 8rem;
  }

  .tags-wrapper {
    width: 100%;
    height: 24%;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    background: rgba(0, 0, 0, 0.6);
    word-break: break-all;
    line-height: 1;
  }

  .tag {
    background-color: #1e73be;
    color: #fff;
    padding: 4px 8px;
    margin: 0 4px;
  }
</style>
