---
const { title, subtitle } = Astro.props
---

<div class="section-title">
  <h2 class="title">{title}</h2>
  <h3 class="subtitle">{subtitle}</h2>
</div>

<style>
  .section-title {
    width: 100%;
    height: 120px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: #333;
    color: #fff;
  }
  .title {
    padding: 0;
    margin: 0;
    font-family: "Open Sans", "Trebuchet MS", Arial, sans-serif;
    font-size: 30px;
    font-weight: 500;
    letter-spacing: 8px;
    text-transform: uppercase;
  }
  .subtitle {
    padding: 0;
    margin: 0;
    font-family: "Open Sans", "Trebuchet MS", Arial, sans-serif;
    font-size: 20px;
    font-weight: 400;
    letter-spacing: 1px;
  }
</style>
